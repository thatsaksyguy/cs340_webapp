 <link rel="stylesheet" href="css/styles.css">

<h1>ORDERS</h1>

<!-- Create a table -->
<table id="Orders-table">
    <!-- Header section -->
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>{{@key}}</th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>
    <!-- Body section -->
    <tbody>
        {{#each data}}
        <tr data-value="{{this.orderID}}">
            <td>{{this.orderID}}</td>
            <td>{{this.orderDate}}</td>
            <td>{{this.customerID}}</td>
            <td>{{this.totalPrice}}</td>
            <td><button onclick="deleteOrder({{this.orderID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_order.js"></script>

<h2>Search Orders</h2>
<p>Search by orderID using the field below.</p>
<form id="search-order-html" method="GET" action="/orders">
    <label for="input-orderID">Search by Order ID: </label>
    <input type="text" name="orderID" id="input-orderID-html-search">
    <button type="submit">Submit</button>
    <br>
    <a href="/orders"><button type="button">Reset</button></a>
</form>

<!-- Form to add a record to the table -->
<h2>Add an Order</h2>
<p>To add a new order, please enter the information below and click 'Submit'!</p>
<form id="add-order-form-ajax">
    <label for="input-orderID">Order ID: </label>
    <input type="text" id="input-orderID" name="orderID" required>

    <label for="input-orderDate">Order Date: </label>
    <input type="number" id="input-orderDate" name="orderDate" required>

    <label for="input-customerID">Customer ID: </label>
    <input type="text" id="input-customerID" name="customerID" required>

    <label for="input-totalPrice">Total Price: </label>
    <input type="number" id="input-totalPrice" name="totalPrice" required>

    <button type="submit">Submit</button>
</form>
<script src="./js/add_order.js"></script>

<h2>Update an Order</h2>
<p>To update an order, please select the Order ID and provide the new values.</p>
<form id="update-order-form-ajax">
    <label for="input-orderID">Order ID: </label>
    <select name="orderID" id="mySelect">
        <option value="" disabled selected>Select an Order</option>
        {{#each data}}
        <option value="{{this.orderID}}">{{this.orderID}}</option>
        {{/each}}
    </select>

    <label for="update-orderDate">Order Date: </label>
    <input type="text" name="orderDate" id="update-orderDate">

    <label for="update-customerID">Customer ID: </label>
    <input type="number" name="customerID" id="update-customerID">

    <label for="update-totalPrice">Total Price: </label>
    <input type="text" name="totalPrice" id="update-totalPrice">

    <button type="submit">Submit</button>
</form>
<script src="./js/update_order.js"></script>