 <link rel="stylesheet" href="css/styles.css">

{{log customers}}

<h1>Orders</h1>

<!-- Create a table -->
<table id="orders-table">
    <!-- Header section -->
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>{{@key}}</th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>
    <!-- Body section -->
    <tbody>
        {{#each data}}
        <tr data-value="{{this.orderID}}">
            <td>{{this.orderID}}</td>
            <td>{{this.orderDate}}</td>
            <td>{{this.customerID}}</td>
            <td>{{this.totalPrice}}</td>
            <td><button onclick="deleteOrder({{this.orderID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_order.js"></script>

<div class="button-container">
    <button id="show-add">Add an Order</button>
    <button id="show-update">Update an Order</button>
</div>

<div id="add-overlay" class="overlay" style="display: none;">
<div class="overlay-content">
<h2>Add an Order</h2>
<p>To add a new order, please enter the information below and click 'Submit'!</p>
<form id="add-order-form-ajax">

    <label for="input-orderDate">Order Date: </label>
    <input type="date" id="input-orderDate" name="orderDate" required>

    <label for="input-customerID">Customer ID: </label>
    <select name="input-customerID" id="input-customerID">
    <option value="">Select a Customer:</option>
    {{#each customers}}
        <option value="{{this.customerID}}">{{this.name}}</option>
    {{/each}}
    </select>

    <label for="input-totalPrice">Total Price: </label>
    <input type="number" id="input-totalPrice" name="totalPrice" required>

    <div class="button-container">
    <button type="submit">Submit</button>
    <button type="button" id="close-add-overlay">Cancel</button>
    </div>
</form>
</div>
</div>

<script src="./js/add_order.js"></script>

<div id="update-overlay" class="overlay" style="display: none;">
<div class="overlay-content">
<h2>Update an Order</h2>
<p>To update an order, please select the Order ID and provide the new values.</p>
<form id="update-order-form-ajax">
    <label for="update-orderID">Order ID: </label>
    <select name="orderID" id="update-orderID">
        <option value="">Select an Order</option>
        {{#each data}}
        <option value="{{this.orderID}}">{{this.orderID}}</option>
        {{/each}}
    </select>

    <label for="update-orderDate">Order Date: </label>
    <input type="date" name="orderDate" id="update-orderDate">

    <label for="input-customerID">Customer ID: </label>
    <select name="customerID" id="update-customerID">
        <option value="">Select a Customer:</option>
        {{#each customers}}
        <option value="{{this.customerID}}">{{this.name}}</option>
        {{/each}}
    </select>

    <label for="update-totalPrice">Total Price: </label>
    <input type="number" name="totalPrice" id="update-totalPrice">

    <div class="button-container">
    <button type="submit">Submit</button>
    <button type="button" id="close-update-overlay">Cancel</button>
    </div>
</form>
</div>
</div>

<script src="./js/update_order.js"></script>
<script src="./js/add.js"></script>
<script src="./js/edit.js"></script>
