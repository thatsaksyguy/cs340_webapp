<link rel="stylesheet" href="css/styles.css">

<h1>Spells</h1>

<!-- Create a table -->
<table id="Spells-table">
    <!-- Header section -->
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>{{@key}}</th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>
    <!-- Body section -->
    <tbody>
        {{#each data}}
        <tr data-value="{{this.spellID}}">
            <td>{{this.spellID}}</td>
            <td>{{this.level}}</td>
            <td>{{this.price}}</td>
            <td>{{this.typeOfSpell}}</td>
            <td>{{this.totalSpellQuantity}}</td>
            <td><button onclick="deleteSpell({{this.spellID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_spell.js"></script>

<div class="button-container">
    <button id="show-add">Add a Spell</button>
    <button id="show-update">Update a Spell</button>
</div>

<div id="add-overlay" class="overlay" style="display: none;">
<div class="overlay-content">
<h2>Add a Spell</h2>
<p>To add a new spell, please enter the information below and click 'Submit'!</p>
<form id="add-spell-form-ajax">
    <label for="input-level">Level: </label>
    <input type="text" id="input-level" name="level" required>

    <label for="input-price">Price: </label>
    <input type="number" id="input-price" name="price" required>

    <label for="input-typeOfSpell">Type of Spell: </label>
    <input type="text" id="input-typeOfSpell" name="typeOfSpell" required>

    <label for="input-totalSpellQuantity">Total Spell Quantity: </label>
    <input type="number" id="input-totalSpellQuantity" name="totalSpellQuantity" required>

    <div class="button-container">
    <button type="submit">Submit</button>
    <button type="button" id="close-add-overlay">Cancel</button>
    </div>
</form>
</div>
</div>
<script src="./js/add_spell.js"></script>

<div id="update-overlay" class="overlay" style="display: none;">
<div class="overlay-content">
<h2>Update a Spell</h2>
<p>To update a specific spell's type or quantity, please select the spell and provide the new values.</p>
<form id="update-spell-form-ajax">
    <label for "update-spellid">Spell ID:</label>
    <select name="spellID" id="update-spellid">
        <option value="" disabled selected>Select a Spell</option>
        {{#each data}}
        <option value="{{this.spellID}}">{{this.spellID}}</option>
        {{/each}}
    </select>

    <label for="update-level">Level: </label>
    <input type="text" name="level" id="update-level">

    <label for="update-price">Price: </label>
    <input type="number" name="price" id="update-price">

    <label for="update-typeOfSpell">Type of Spell: </label>
    <input type="text" name="typeOfSpell" id="update-typeOfSpell">

    <label for="update-totalSpellQuantity">Total Spell Quantity: </label>
    <input type="number" name="totalSpellQuantity" id="update-totalSpellQuantity">

    <div class="button-container">
    <button type="submit">Submit</button>
    <button type="button" id="close-update-overlay">Cancel</button>
    </div>
</form>
</div>
</div>

<script src="./js/update_spell.js"></script>
<script src="./js/add.js"></script>
<script src="./js/edit.js"></script>
